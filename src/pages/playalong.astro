<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Spotify Playalong</title>
  </head>
  <style>
    header {
      background: linear-gradient(355deg, rgb(1 26 10) 5%, rgb(34, 197, 94));
    }
    footer {
      font-family: "Nimbus Mono PS", "Courier New", monospace;
    }
  </style>
  <body class="">
    <header class="pt-3 pb-2">
      <div class="max-w-[600px] px-4 mx-auto text-black font-bold text-2xl">
        Spotify Playalong
      </div>
    </header>
    <main class="max-w-[600px] px-8 mx-auto pt-16">
      <h1 class="text-3xl">
        Get live musical anotation to the music you're listening to on spotify
      </h1>
      <div class="mt-16">
        <a
          href={spotifyLoginURL("playalong")}
          class="inline-block px-6 pt-3 pb-2 rounded-full text-xl font-bold bg-green-500 text-black"
          >Connect to my spotify</a
        >
      </div>
    </main>
